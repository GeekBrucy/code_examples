{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "outDir": "dist",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": false,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["server.mts", "lib/**/*", "types/**/*"]
}
