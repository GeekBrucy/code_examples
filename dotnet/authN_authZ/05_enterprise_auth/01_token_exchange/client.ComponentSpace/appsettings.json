{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ComponentSpace": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Saml": {
    "$schema": "https://www.componentspace.com/schemas/saml-config-schema-v1.0.json",
    "Configurations": [
      {
        "LocalServiceProviderConfiguration": {
          "Name": "https://localhost:5007/saml",
          "Description": "ComponentSpace SAML SP",
          "AssertionConsumerServiceUrl": "https://localhost:5007/saml/acs"
        },
        "PartnerIdentityProviderConfigurations": [
          {
            "Name": "SamlIdp",
            "Description": "Development SAML IdP",
            "SingleSignOnServiceUrl": "https://localhost:5001/saml/sso",
            "SingleSignOnServiceBinding": "urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Redirect",
            "SignAuthnRequest": false,
            "PartnerCertificates": [
              {
                "FileName": "../saml/idp-signing.pfx",
                "Password": "devpassword"
              }
            ]
          }
        ]
      }
    ]
  }
}
