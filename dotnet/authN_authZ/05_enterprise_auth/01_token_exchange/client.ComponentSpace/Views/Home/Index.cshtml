@{
    ViewData["Title"] = "Home";
}

<h1>ComponentSpace SAML SP <span class="badge">Authenticated</span></h1>

<p>Welcome, <strong>@User.Identity?.Name</strong>!</p>

<h2>Your Claims</h2>
<table class="claims-table">
    <thead>
        <tr>
            <th>Type</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in User.Claims)
        {
            <tr>
                <td>@claim.Type.Split('/').Last()</td>
                <td>@claim.Value</td>
            </tr>
        }
    </tbody>
</table>

<a href="/saml/logout" class="logout-link">Logout</a>
